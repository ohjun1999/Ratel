<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="1dp" android:left="-2dp" android:right="-2dp" android:state_checked="true" android:top="-2dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/mainBlack" />
        </shape>
    </item>
    <item android:bottom="1dp" android:left="-2dp" android:right="-2dp" android:state_checked="false" android:top="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/backWeakGray" />
        </shape>
    </item>
</selector>