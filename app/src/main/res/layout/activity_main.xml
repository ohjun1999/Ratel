<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="640">

        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="56"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16" />



            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="56"
                android:src="@drawable/ic_ratel" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="164" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/goAlarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:background="@color/white"
                android:src="@drawable/ic_go_alram" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/goExtra"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"
                android:background="@color/white"
                android:src="@drawable/ic_go_extra" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16" />


        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="153"
            android:background="@color/mainBlack"
            android:orientation="horizontal"
            android:weightSum="153">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/maCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/ic_ratel"
                    app:tint="@color/white" />


                <TextView
                    android:id="@+id/maYear"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="20"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toTopOf="@id/moilImage">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="welcome, "
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/maName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="최원빈"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="님"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/moilImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/ratel_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="229"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_weight="20"
                android:background="@drawable/ic_go_note"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/firstLinear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="108"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/secondLinear"
                app:layout_constraintTop_toBottomOf="@id/goNote">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/goExplain"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="157"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_go_explain" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/goDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="157"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_go_date" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/secondLinear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="107"
                android:adjustViewBounds="true"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@id/banner"
                app:layout_constraintTop_toBottomOf="@id/firstLinear">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/goNotice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="157"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_go_notice" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/goHome"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="157"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_go_trade" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="132"
            android:background="@color/backWeakGray"
            app:layout_constraintBottom_toBottomOf="parent" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14" />


    </LinearLayout>
</layout>