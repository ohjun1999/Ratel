<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/etInputInfo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="간편비밀번호\n입력" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/etPasscode1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPassword|number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="40sp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/etPasscode2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPassword|number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="40sp">


        </EditText>

        <EditText
            android:id="@+id/etPasscode3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPassword|number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="40sp">


        </EditText>

        <EditText
            android:id="@+id/etPasscode4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPassword|number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="40sp">


        </EditText>

        <EditText
            android:id="@+id/etPasscode5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPassword|number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="40sp">


        </EditText>

        <EditText
            android:id="@+id/etPasscode6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPassword|number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="40sp">


        </EditText>

        <EditText
            android:id="@+id/etPasscode7"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="textPassword|number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="40sp">


        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn1"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:text="1"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn2"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:text="2"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn3"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:text="3"
                    android:textSize="18sp" />


            </TableRow>

            <TableRow>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn4"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:text="4"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn5"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:text="5"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn6"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:text="6"
                    android:textSize="18sp" />


            </TableRow>

            <TableRow>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn7"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:text="7"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn8"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:text="8"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn9"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:text="9"
                    android:textSize="18sp" />


            </TableRow>

            <TableRow>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnClear"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:text="재배열"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn0"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:text="0"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnErase"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_cil_delete" />


            </TableRow>


        </TableLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/goMain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/moilGreen"
            android:padding="8dp"
            android:text="다음"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>