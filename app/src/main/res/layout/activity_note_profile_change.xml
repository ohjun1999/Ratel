<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:elevation="40dp"
        android:orientation="horizontal"

        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backKey"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingStart="8dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/mainBlack" />

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:text="동문수첩"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/white"
                android:elevation="10dp"
                app:layout_constraintTop_toBottomOf="@id/top_bar">

                <ImageView
                    android:id="@+id/deImg"
                    android:layout_width="77dp"
                    android:layout_height="109dp"
                    android:layout_margin="14dp"
                    android:background="@color/backGray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/deImg">

                    <TextView
                        android:id="@+id/frYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="19"
                        android:textColor="@color/black"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/frName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:gravity="center"
                        android:text="최원빈"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>


                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_bookmark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/main">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:text="생년월일"
                    android:textSize="12sp" />

                <EditText
                    android:selectAllOnFocus="true"
                    android:background="@color/white"
                    android:id="@+id/frBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:text="휴대전화"
                    android:textSize="12sp" />

                <EditText
                    android:selectAllOnFocus="true"
                    android:background="@color/white"
                    android:id="@+id/frPhoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:text="이메일"
                    android:textSize="12sp" />


                <EditText
                    android:selectAllOnFocus="true"
                    android:background="@color/white"
                    android:id="@+id/frEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:text="FAX번호"
                    android:textSize="12sp" />

                <EditText
                    android:selectAllOnFocus="true"
                    android:background="@color/white"
                    android:id="@+id/frFaxNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:selectAllOnFocus="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:text="직장"
                    android:textSize="12sp" />


                <EditText
                    android:selectAllOnFocus="true"
                    android:background="@color/white"
                    android:id="@+id/frCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:text="부서"
                    android:textSize="12sp" />


                <EditText
                    android:selectAllOnFocus="true"
                    android:background="@color/white"
                    android:id="@+id/frDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:text="직급"
                    android:textSize="12sp" />


                <EditText
                    android:selectAllOnFocus="true"
                    android:background="@color/white"
                    android:id="@+id/frComPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp"
                    android:text="주소"
                    android:textSize="12sp" />


                <EditText
                    android:selectAllOnFocus="true"
                    android:background="@color/white"
                    android:id="@+id/frComAdr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancellationRequest"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/btnGray"
            android:layout_margin="16dp"
            android:text="요청취소"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/click_button"
            android:layout_margin="16dp"
            android:text="수정요청"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />

    </FrameLayout>

</LinearLayout>